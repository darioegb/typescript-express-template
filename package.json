{
    "name": "typescript-express-template",
    "version": "1.0.2",
    "main": "index.js",
    "scripts": {
        "start": "cross-env NODE_ENV=prod ts-node --transpile-only src/server.ts",
        "dev": "cross-env NODE_ENV=dev nodemon --inspect=5858 --ext ts --exec node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
        "test": "cross-env NODE_ENV=test jest --coverage --forceExit --detectOpenHandles",
        "lint": "eslint --ignore-path .gitignore --ext .js,.ts . --fix",
        "pre-push": "npm run lint && npm test"
    },
    "author": "Dario E Gonzalez B",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "colors": "^1.4.0",
        "cross-env": "^7.0.2",
        "dotenv": "^8.2.0",
        "envalid": "^6.0.2",
        "express": "^4.17.1",
        "jest": "^26.4.2",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "mongoose": "^5.9.18",
        "mongoose-unique-validator": "^2.0.3",
        "ts-jest": "^26.4.0",
        "ts-node": "^8.6.2",
        "typescript": "^3.9.6"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.7",
        "@types/jest": "^26.0.14",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mongoose": "^5.7.31",
        "@types/mongoose-unique-validator": "^1.0.4",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "eslint": "^7.11.0",
        "husky": "^4.3.0",
        "nodemon": "^1.12.1",
        "supertest": "^4.0.2",
        "tsconfig-paths": "^3.9.0"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "./jest.setup.ts"
        ],
        "moduleNameMapper": {
            "@/(.*)": "<rootDir>/src/$1"
        },
        "testTimeout": 60000,
        "preset": "ts-jest",
        "testEnvironment": "node",
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    },
    "_moduleAliases": {
        "@": "src"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run pre-push"
        }
    }
}
