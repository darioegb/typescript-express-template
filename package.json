{
    "name": "typescript-express-template",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "test": "jest --coverage --forceExit --detectOpenHandles",
        "test:watch": "jest --coverage --watchAll --runInBand --detectOpenHandles",
        "build": "tsc && cp .env ./build/.env",
        "dev": "nodemon --ext ts --exec ts-node --delay 3 ./src/server.ts",
        "prod": "nodemon ./dist/server.js",
        "lint": "tslint -p tsconfig.json -c tslint.json"
    },
    "author": "Dario Gonzalez",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "dotenv": "^8.2.0",
        "envalid": "^6.0.2",
        "express": "^4.17.1",
        "jest": "^26.4.2",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.18",
        "mongoose-unique-validator": "^2.0.3",
        "ts-jest": "^26.4.0",
        "typescript": "^3.9.6"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.7",
        "@types/jest": "^26.0.14",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mongoose": "^5.7.31",
        "@types/mongoose-unique-validator": "^1.0.4",
        "@types/supertest": "^2.0.10",
        "nodemon": "^1.12.1",
        "supertest": "^4.0.2",
        "ts-node": "^8.6.2",
        "tslint": "^6.1.3"
    },
    "jest": {
        "testTimeout": 60000,
        "preset": "ts-jest",
        "testEnvironment": "node",
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    }
}
